     <span class="homesection_wrapper-form-Design-span"><i style="color: #ba36e9;" class="fa-solid fa-pen-to-square"></i> You're editing this Design</span>
     {% endif %}



        {{
          form_start(
            DesignFormType,
            {
              attr: {
                class: 'homesection_wrapper-form-Design-form'
              },
              action: '/home/sections?active=graphicDesign&savetype=designElement' ,
              method: 'POST'
            }
          )
        }}
        
        <div class="homesection_wrapper-form-Design-form-wrapper">
          <div class="homesection_wrapper-form-Design-form-wrapper-item">
            {{ form_label(DesignFormType.title) }}
