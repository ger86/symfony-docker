  {% block javascripts %}
    <script>
   window.addEventListener("load", () => {
    const valueBoxRamge = document.getElementsByClassName('homesection_wrapper-form-Design-form-wrapper-item-range')[0];
     const rangeValue = document.querySelector('#design_year');

     valueBoxRamge.innerText = `Actual value = ${rangeValue.value}`;

    rangeValue.addEventListener('change',(e)=>{
        valueBoxRamge.innerText = `Actual value = ${e.target.value}`;
 
}) 

   })
    </script>
{% endblock %}
 

